  <!-- Joints and Links -->
  <!-- Joint 1 -->

  <joint name="joint_1" type="revolute">
    <parent link="base_robot_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
  </joint>
  <!-- Joint 2 -->
  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 -0.02 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>
  <!-- Joint 3 -->
  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0.02 0.4" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>
  <!-- Gripper -->
  <joint name="gripper_joint" type="fixed">
    <parent link="link_3"/>
    <child link="gripper"/>
    <origin xyz="0 0.0 0.2" rpy="0 0 0"/>
  </joint>
  <!-- End Effector -->
  <joint name="gripper_finger_1_joint" type="prismatic">
    <parent link="gripper"/>
    <child link="gripper_finger_1"/>
    <origin xyz="0.005 0 0.1" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="0.025" effort="5" velocity="0.5"/>
  </joint>

  <joint name="gripper_finger_2_joint" type="prismatic">
    <parent link="gripper"/>
    <child link="gripper_finger_2"/>
    <origin xyz="-0.005 0 0.1" rpy="0 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit lower="0" upper="0.025" effort="5" velocity="0.5"/>
  </joint>
</robot>
