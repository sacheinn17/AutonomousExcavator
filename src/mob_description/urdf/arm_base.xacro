<robot name="three_axis_arm" xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:robo_link name="base_robot_link" radius= "0.1" length="0.1" material="black" mass="0.2"/>
<xacro:robo_link name="link_1" radius= "0.05" length="0.1" material="silver" mass="0.15"/>
<xacro:robo_link name="link_2" radius= "0.04" length="0.4" material="black" mass="0.45" />
<xacro:robo_link name="link_3" radius= "0.03" length="0.2" material="silver" mass="0.05" />
<xacro:box_link name="gripper" sx="0.05" sy="0.05" sz="0.1" material="black" mass="0.1"/>
<xacro:box_link name = "gripper_finger_1" sx="0.01" sy="0.03" sz="0.03" material="silver" mass="0.01"/>
<xacro:box_link name = "gripper_finger_2" sx="0.01" sy="0.03" sz="0.03" material="silver" mass="0.01"/>
  
